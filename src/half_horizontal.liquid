{% render 'head_assets' %}

<div class="layout layout--col gap--space-between">
  <div class="grid h-full">

    <!-- Left Column: Stats & Legends -->
    <div class="col--span-3 col gap--space-between">

      <!-- Row 1: Electricity (Standard Size) -->
      <div class="grid grid--cols-2 gap--[9px]" data-adjust-grid-gaps="false">
        {% render 'mini_stat', 
          data: electricity, 
          label: "Price electricity now", 
          type: 'current'
        %}
        {% render 'mini_stat', 
          data: electricity, 
          label: "Avg electricity price", 
          type: 'avg'
        %}
      </div>

      <div class="divider"></div>

      <!-- Row 2: Gas (Small Size) -->
      <div class="grid grid--cols-2">
        {% render 'mini_stat', 
          data: gas, 
          label: "Price gas now", 
          type: 'current',
          size: 'xsmall'
        %}
        {% render 'mini_stat', 
          data: gas, 
          label: "Avg gas price", 
          type: 'avg',
          size: 'xsmall'
        %}
      </div>

      <div class="divider"></div>

      <!-- Row 3: Legends -->
      <div class="grid grid--cols-2">
        {% render 'legend_item', 
          label: "Electricity", 
          color: "bg--black" 
        %}
        {% render 'legend_item', 
          label: "Gas", 
          color: "bg--gray-5" 
        %}
      </div>
    </div>

    <!-- Right Column: Chart -->
    <div class="col--span-3 col gap--space-between">

      <!-- Render the shared chart component -->
      {% render 'energy_chart'
        , id: "energy-chart"
        , electricity: electricity
        , gas: gas
        , variant: "full"
      %}
    </div>
  </div>
</div>
{% render 'title_bar', instance: "Energy Prices Chart" %}